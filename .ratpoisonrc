escape M-k
bind w exec firefox
bind c exec sakura -e /bin/bash -l
bind v exec sakura -t vim -e /bin/bash -l -c vim
bind m exec sakura -t mutt -e /bin/bash -l -c mutt
bind i exec sakura -t irc -e /bin/bash -l -c irssi

bind I info

bind h focusleft
bind j focusdown
bind k focusup
bind l focusright

startup_message off
set winname title

set barpadding 0 0
defborder 0

exec unclutter

bind F1 exec .ratpoison/modeswitch.rp work
bind F2 exec .ratpoison/modeswitch.rp comm
bind F3 exec .ratpoison/modeswitch.rp web
bind F4 exec .ratpoison/modeswitch.rp misc
bind F5 exec .ratpoison/modeswitch.rp srs

bind F8 exec .ratpoison/modeswitch.rp win
bind F9 exec .ratpoison/modeswitch.rp build

bind F12 exec .ratpoison/moderestore.rp

gnew work
gnewbg comm
gnewbg web
gnewbg win
gnewbg build
gnewbg misc
gnewbg srs

gnewbg bg

exec .ratpoison/init.rp
exec .ratpoison/modeload.rp work

